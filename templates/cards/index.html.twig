{% extends '@!Twig/base.html.twig' %}
{% block body %}
  <main style="font: 16px/1.4 system-ui; max-width: 800px; margin: 2rem auto;">
    <h1>Jeu de cartes — Démo</h1>

    <section>
      <h2>Ordres aléatoires</h2>
      <p><strong>Couleurs</strong> : {{ orders.suits|join(', ') }}</p>
      <p><strong>Valeurs</strong> : {{ orders.ranks|join(', ') }}</p>
    </section>

    <section>
      <h2>Main non triée</h2>
      <ul>
      {% for c in unsorted %}<li>{{ c }}</li>{% endfor %}
      </ul>
    </section>

    <section>
      <h2>Main triée</h2>
      <ul>
      {% for c in sorted %}<li>{{ c }}</li>{% endfor %}
      </ul>
    </section>
  </main>
{% endblock %}
